<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>books</title>
  <link rel="stylesheet" href="/ui.css">
</head>

<body>

  <header>
    <h1>List of Books</h1>
  </header>
  
  <div class="item">

  
      <% bookdeets.forEach( (book) => {    %>
        
        <div class="simplecard">  
            
              <div class="title"> 
                <%= book.book_name %> 
              </div>
              <div>
                <img src="<%= book.img_path %>">
              </div>
              <div>
                <%= book.release_yr %>
              </div>
              <div>
                written by: <%= book.author  %>
              </div>
              <div> 
                Published by: <%= book.publisher %> 
               </div>
  
        </div>

      <% });  %>
   

      <div>
        <h3>characters in book</h3>

       <% bookchars.forEach( (row) =>{  %>

            <div> <%= row.name  %>  </div>

       <% } );  %>

      </div>


    <a href="/" class="cd-btn--primary"> BACK </a>

  </div>

</body>

</html>


